<div class='col-xs-12 col-sm-6'>
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :class => 'form-horizontal', :html => { :method => :put, :role => 'form'}) do |f| %>

    <div class='form-group<%= " has-error" if devise_error_messages! :email %>'>
      <%= f.label :email, :class => 'control-label' %> <span class='text-danger'><%= devise_error_messages! :email %></span>
      <%= f.email_field :email, :class => 'form-control' %>
    </div>

    <div class='form-group<%= " has-error" if devise_error_messages! :password %>'>
      <%= f.label :password, :class => 'control-label' %> <i>(leave blank if you don't want to change it)</i> <span class='text-danger'><%= devise_error_messages! :password %></span>
      <%= f.password_field :password, :class => 'form-control' %>
    </div>

    <div class='form-group<%= " has-error" if devise_error_messages! :password_confirmation %>'>
      <%= f.label :password_confirmation, :class => 'control-label' %> <span class='text-danger'><%= devise_error_messages! :password_confirmation %></span>
      <%= f.password_field :password_confirmation, :class => 'form-control' %>
    </div>

    <div class='form-group<%= " has-error" if devise_error_messages! :current_password %>'>
      <%= f.label :current_password, :class => 'control-label' %> <i>(we need your current password to confirm your changes)</i> <span class='text-danger'><%= devise_error_messages! :current_password %></span>
      <%= f.password_field :current_password, :class => 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.submit "Update", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
<div>
<div class='col-xs-12 col-sm-5 col-sm-offset-1 top-spacer-sm'>
  <h4>Go back to the previous page</h4>
  <h5><%= link_to "Back", :back %></h5>
</div>
