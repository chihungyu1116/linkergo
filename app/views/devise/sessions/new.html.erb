<div class='col-xs-12 col-sm-6'>
	<h2>Login</h2>
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name),:class => 'form-horizontal', :html => {:role => 'form'}) do |f| %>
		<div class='form-group'>
			<%= f.label :email, :class => 'control-label' %>
			<%= f.email_field :email, :class => 'form-control' %>
		</div>
		<div class='form-group'>
			<%= f.label :password, :class => 'control-label' %>
			<%= f.password_field :password, :class => 'form-control' %>
		</div>
		<% if devise_mapping.rememberable? -%>
		<div class='form-group clearfix'>
			<%= f.check_box :remember_me, :class => 'checkbox leaf' %> <%= f.label :remember_me, :class => 'leaf control-label' %>
		</div>
		<% end -%>

		<div class='form-group'>
			<%= f.submit "Sign in", class: 'btn btn-primary' %>
		</div>
	<% end %>	
</div>

<div class='col-xs-12 col-sm-5 col-sm-offset-1 top-spacer-sm'>
	<%= render :partial => "devise/shared/links" %>
</div>